extends ../m-layout.jade

block title
  title 看店大礼包

block css
  link(rel="stylesheet" type="text/css" href="../../css/order.css")
block js
  script(src="../../js/jquery.min.js")
  script(src="../../js/jQuery.tagsinput.js")
  script(src="../../js/order.js")
block body
  body
    div.get-order.orders
      div.header.header-bg02
        div.title
          span.title-name 请选择原因
